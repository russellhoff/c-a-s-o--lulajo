PREGUNTASPASAPALABRA(
	ID INTEGER PRIMARY KEY, 		--índice: para anyadir dejar este campo a  NULL.
	SULETRA CHAR DEFAULT 'A' NOT NULL,	--indica la letra a la que está asociada la pregunta.
	COMIENZA BOOLEAN DEFAULT true NOT NULL,	--indica si comienza por la letra que indica SuLetra: si true, comienza por esa letra; si false, 							--	contiene esa letra.
	PREGUNTA VARCHAR(150) NOT NULL,		--la pregunta.
	RESPUESTA VARCHAR(150) NOT NULL		--la respuesta a la pregunta.
)

